<resources>
<style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
    <!-- your toolbar color -->
    <item name="colorPrimary">@color/header_blue</item>
    <item name="colorOnPrimary">@color/white</item>
    <item name="android:windowBackground">@color/white</item>
    <item name="android:windowNoTitle">true</item>
    <item name="android:windowFullscreen">true</item>
    <!-- make the status bar the same color -->
    <!-- for Material3 -->
    <item name="colorPrimaryVariant">@color/header_blue</item>
    <!-- ensure API-21+ status bar picks it up -->
    <item name="android:statusBarColor">@color/header_blue</item>
</style>
    <style name="Shape.TopRounded" parent="">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSizeTopLeft">16dp</item>
        <item name="cornerSizeTopRight">16dp</item>
        <item name="cornerSizeBottomLeft">0dp</item>
        <item name="cornerSizeBottomRight">0dp</item>
    </style>
</resources>